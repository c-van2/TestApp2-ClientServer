@page "/mycpd"
@using TestApp2.Shared
@inject HttpClient Http
@using MudBlazor

<PageTitle>My CPD</PageTitle>

<MudText Typo="Typo.h6" Class="mb-2">Continuing Professional Development (CPD) Record</MudText>

<MudTable Items="@myCpdRecords" Hover="true" Breakpoint="Breakpoint.None">
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>Total Hours including Compulsory</MudTh>
        <MudTh>Compulsory#</MudTh>
        <MudTh>Total Hours including Core</MudTh>
        <MudTh>Core</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Column"><b>@context.Column</b></MudTd>
        <MudTd DataLabel="Total Hours including Compulsory">@context.IaTotal</MudTd>
        <MudTd DataLabel="Compulsory#">@context.IaComp</MudTd>
        <MudTd DataLabel="Total Hours including Core">@context.MpfaTotal</MudTd>
        <MudTd DataLabel="Core">@context.MpfaComp</MudTd>
    </RowTemplate>
</MudTable>

<br />
<MudText Typo="Typo.subtitle1" Class="mb-4"> <b>Your Courses / Activities Overview</b></MudText>
<MudTable Items="@myCourseRecords" Hover="true" Breakpoint="Breakpoint.None" Striped="@striped" Color="Color.Tertiary"
    Style="overflow-x: auto;">
    <HeaderContent>
        <MudTh>Date Completed</MudTh>
        <MudTh>Course Code</MudTh>
        <MudTh>Course / Activity Provider</MudTh>
        <MudTh>Course / Activity Title</MudTh>
        <MudTh>IA CPD</MudTh>
        <MudTh>IA Compulsory</MudTh>
        <MudTh>MPFA Non-Core</MudTh>
        <MudTh>MPFA Core</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Date Completed">@context.DateCompleted.ToString("yyyy-MM-dd")</MudTd>
        <MudTd DataLabel="Course Code">@context.CourseCode</MudTd>
        <MudTd DataLabel="Course / Activity Provider">@context.Provider</MudTd>
        <MudTd DataLabel="Course / Activity Title">@context.CourseTitle</MudTd>
        <MudTd DataLabel="IA CPD">@context.IaCpd</MudTd>
        <MudTd DataLabel="IA Compulsory">@context.IaCompulsory</MudTd>
        <MudTd DataLabel="MPFA Non-Core">@context.MpfaNonCore</MudTd>
        <MudTd DataLabel="MPFA Core">@context.MpfaCore</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private bool _loading = false;
    private bool striped = true;
    private int TargetPeople = 5;
    private IaCpdRecord[]? iaCpdRecords;
    private MyCpdRecord[]? myCpdRecords;
    private MyCourseRecord[]? myCourseRecords;

    protected override async Task OnInitializedAsync()
    {
        iaCpdRecords = await Http.GetFromJsonAsync<IaCpdRecord[]>("TeamCPD/IAcpd");
        myCpdRecords = await Http.GetFromJsonAsync<MyCpdRecord[]>("MyCPD/MYcpd");
        myCourseRecords = await Http.GetFromJsonAsync<MyCourseRecord[]>("MyCPD/MYcourse");
    }
}
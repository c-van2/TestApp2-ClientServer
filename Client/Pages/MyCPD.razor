@page "/mycpd"
@using TestApp2.Shared
@inject HttpClient Http
@using MudBlazor

<PageTitle>My CPD</PageTitle>

<MudText Typo="Typo.h6" Class="mb-2">Continuing Professional Development (CPD) Record</MudText>

<MudText Typo="Typo.subtitle1" Class="mb-4"> <b>Your Courses / Activities Overview</b>
</MudText>
<MudTable Items="@iaCpdRecords" Hover="true" Breakpoint="Breakpoint.None" Striped="@striped" Color="Color.Tertiary" Style="overflow-x: auto;">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Full Name</MudTh>
        <MudTh>Total Hours</MudTh>
        <MudTh>Compulsory</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Full Name">@context.FullName</MudTd>
        <MudTd DataLabel="Total Hours">@context.TotalHours</MudTd>
        <MudTd DataLabel="Compulsory">@context.Compulsory</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private bool _loading = false;
    private bool striped = true;
    private int TargetPeople = 5;
    private IaCpdRecord[]? iaCpdRecords;

    protected override async Task OnInitializedAsync()
    {
        iaCpdRecords = await Http.GetFromJsonAsync<IaCpdRecord[]>("TeamCPD/IAcpd");
    }
}